    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offWhite"
    tools:context=".MainActivity">

    <!-- Define the floating action button -->

    <!-- Add buttons for home, saved locations, and settings -->
    <RelativeLayout
        android:id="@+id/buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/lightBlue"
        tools:ignore="NotSibling">


        <Button
            android:id="@+id/home_button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:contextClickable="true"
            android:text="@string/app_name"
            />

        <Button
            android:id="@+id/locations_button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@+id/home_button"
            android:text="@string/locations_button_text"/>

        <Button
            android:id="@+id/settings_button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:visibility="visible"
            android:layout_toRightOf="@+id/locations_button"
            android:text="@string/settings_button_text"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightBlue"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:contentDescription="settings"
            app:srcCompat="@drawable/sidebar" />

        <!-- Define a TextView to display the current temperature -->
        <TextView
            android:id="@+id/headerLocationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="@color/black"
            />


