<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Define the floating action button -->

    <!-- Add buttons for home, saved locations, and settings -->
    <RelativeLayout
        android:id="@+id/buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/lightBlue"
        >


        <Button
            android:id="@+id/home_button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:contextClickable="true"
            android:text="Weather Today"
            />

        <Button
            android:id="@+id/locations_button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@+id/home_button"
            android:text="Forecast"/>

        <Button
            android:id="@+id/settings_button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/locations_button"
            android:text="Game"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="66dp"
        android:orientation="horizontal"
        android:background="@color/lightBlue"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="-1dp">

        <ImageButton
            android:id="@+id/settings"
            android:contentDescription="settings"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/sidebar" />

        <TextView
            android:id="@+id/headerLocationName"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="Fullerton" />

        <TextView
            android:id="@+id/appName"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:text="@string/app_name2"
            android:textColor="@color/black"
            android:textStyle="bold"

            android:layout_marginTop="30dp"
            android:textSize="18sp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
