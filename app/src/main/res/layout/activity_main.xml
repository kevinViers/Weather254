<!-- Define the layout as a ConstraintLayout -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offWhite"
    tools:context=".MainActivity">

    <!-- Define the buttons layout -->
    <RelativeLayout
        android:id="@+id/buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/lightBlue"
        >

        <!-- Define the home button -->
        <Button
            android:id="@+id/home_button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:contextClickable="true"
            android:text="@string/app_name"
            />

        <!-- Define the saved locations button -->
        <Button
            android:id="@+id/locations_button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@+id/home_button"
            android:text="@string/locations_button_text"/>

        <!-- Define the settings button -->
        <Button
            android:id="@+id/settings_button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/locations_button"
            android:text="@string/settings_button_text"/>
    </RelativeLayout>

    <!-- Define the top layout -->
    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightBlue"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Define the settings button as an image button -->
        <ImageButton
            android:id="@+id/settings"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:contentDescription="settings"
            app:srcCompat="@drawable/sidebar" />

        <!-- Define a TextView to display the location name -->
        <TextView
            android:id="@+id/headerLocationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="@color/black"
            />

        <!-- Define a TextView to display the current temperature -->
        <TextView
            android:id="@+id/currentTempTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp" />

    </LinearLayout>

    <!-- Define the search layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/top_layout">

 </LinearLayout>
 <LinearLayout
     android:background="@color/lightBlue"
     android:id="@+id/search_layout"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:gravity="center"
     android:layout_margin="20dp"
     app:layout_constraintTop_toBottomOf="@+id/top_layout">


    <!-- A text input for the user to enter their zip code -->
    <EditText
        android:id="@+id/zipCodeInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:hint="@string/zip_code_hint"
        android:inputType="number"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />


     <Button
         android:id="@+id/searchButton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/search_button_text"
         android:textColor="@color/white"
         android:textSize="24sp"
         android:textStyle="bold" />

 </LinearLayout>
 <LinearLayout
     android:id="@+id/weather_layout"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:gravity="center"
     android:background="@color/lightBlue"
     android:layout_margin="20dp"
     app:layout_constraintTop_toBottomOf="@+id/search_layout" >
     <!-- A vertical LinearLayout to display the morning temperature -->
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:gravity="center">

         <TextView
             android:id="@+id/Morning"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Morning"
             android:textSize="20dp">
         </TextView>

         <Space
             android:layout_width="50dp"
             android:layout_height="wrap_content">

         </Space>

         <!-- An ImageView to display the weather condition for the morning -->
         <ImageView
             android:id="@+id/tem_Morning"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:src="@drawable/sunny">
         </ImageView>

         <!-- A TextView to display the temperature for the morning -->
         <TextView
             android:id="@+id/morningTemp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="78°F"
             android:textSize="20sp">
         </TextView>
     </LinearLayout>

     <Space
         android:layout_width="50dp"
         android:layout_height="wrap_content">
     </Space>

     <!-- A vertical LinearLayout to display the day temperature -->
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:gravity="center">

         <TextView
             android:id="@+id/Day"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Day"
             android:textSize="20sp">
         </TextView>

         <Space
             android:layout_width="50dp"
             android:layout_height="wrap_content">

         </Space>

         <!-- Display the weather condition for the day with an image -->

         <ImageView
             android:id="@+id/tem_Day"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:src="@drawable/sunny"
             >
         </ImageView>
         <!-- Display the temperature for the day in Celsius -->

         <TextView
             android:id="@+id/dayTemp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="78°F"
             android:textSize="20sp">
         </TextView>
         <!-- Add space between the Day and Night weather sections -->

         <Space
             android:layout_width="50dp"
             android:layout_height="wrap_content">
         </Space>
         <!-- Display the weather condition for the night with an image -->

         <ImageView
             android:id="@+id/tem_Night"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:src="@drawable/rain"
             >
         </ImageView>
         <!-- Display the temperature for the night in Celsius -->

         <TextView
             android:id="@+id/nightTemp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="78°F"
             android:textSize="20sp">
         </TextView>
     </LinearLayout>
     </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>