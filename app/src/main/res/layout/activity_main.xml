<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Define the floating action button -->

    <!-- Add buttons for home, saved locations, and settings -->
    <RelativeLayout
        android:id="@+id/buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/lightBlue"
        >


        <Button
            android:id="@+id/home_button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:contextClickable="true"
            android:text="@string/app_name"
            />

        <Button
            android:id="@+id/locations_button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@+id/home_button"
            android:text="@string/locations_button_text"/>

        <Button
            android:id="@+id/settings_button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/locations_button"
            android:text="@string/settings_button_text"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightBlue"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:contentDescription="settings"
            app:srcCompat="@drawable/sidebar" />

        <!-- Define a TextView to display the current temperature -->
        <TextView
            android:id="@+id/headerLocationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48dp"
            android:textColor="@color/black"
            />


     <TextView
         android:id="@+id/currentTempTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/black"
         android:textSize="24sp"
         android:textStyle="bold"
         android:layout_marginStart="20dp" />


 </LinearLayout>
 <LinearLayout
     android:id="@+id/search_layout"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:gravity="center"
     android:layout_margin="20dp"
     app:layout_constraintTop_toBottomOf="@+id/top_layout">

     <EditText
         android:id="@+id/zipCodeInput"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:background="@android:color/transparent"
         android:hint="@string/zip_code_hint"
         android:inputType="number"
         android:maxLines="1"
         android:paddingStart="10dp"
         android:paddingEnd="10dp"
         android:textColor="@color/black"
         android:textSize="24sp"
         android:textStyle="bold" />


     <Button
         android:id="@+id/searchButton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/search_button_text"
         android:textColor="@color/black"
         android:textSize="24sp"
         android:textStyle="bold" />

 </LinearLayout>
 <LinearLayout
     android:id="@+id/weather_layout"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:gravity="center"
     android:layout_margin="20dp"
     app:layout_constraintTop_toBottomOf="@+id/search_layout"

     >
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:gravity="center">
         <TextView
             android:id="@+id/Morning"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Morning"
             android:textSize="20dp">
         </TextView>
         <Space
             android:layout_width="50dp"
             android:layout_height="wrap_content">

         </Space>
         <ImageView
             android:id="@+id/tem_Morning"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:src="@drawable/sunny"
             >
         </ImageView>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="78*C"
             android:textSize="20dp">
         </TextView>
     </LinearLayout>
     <Space
         android:layout_width="50dp"
         android:layout_height="wrap_content">

     </Space>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:gravity="center">
         <TextView
             android:id="@+id/Day"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Day"
             android:textSize="20dp">
         </TextView>
         <Space
             android:layout_width="50dp"
             android:layout_height="wrap_content">

         </Space>
         <ImageView
             android:id="@+id/tem_Day"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:src="@drawable/sunny"
             >
         </ImageView>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="78*C"
             android:textSize="20dp">
         </TextView>
     </LinearLayout>
     <Space
         android:layout_width="50dp"
         android:layout_height="wrap_content">

     </Space>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:gravity="center">
         <TextView
             android:id="@+id/Night"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Night"
             android:textSize="20dp">
         </TextView>
         <Space
             android:layout_width="50dp"
             android:layout_height="wrap_content">

         </Space>
         <ImageView
             android:id="@+id/tem_Night"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:src="@drawable/rain"
             >
         </ImageView>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="78*C"
             android:textSize="20dp">
         </TextView>
     </LinearLayout>
 </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>
