<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="-1dp">

        <TextView
            android:id="@+id/streak"
            android:layout_width="38dp"
            android:layout_height="34dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight=".15"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="Streak: " />

        <TextView
            android:id="@+id/streakPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="0" />

        <TextView
            android:id="@+id/highScore"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_weight=".05"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="High Score: " />

        <TextView
            android:id="@+id/highScorePoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_weight=".25"
            android:text="0" />
    </LinearLayout>

    <TextView
        android:id="@+id/city1"
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:gravity="center"
        android:background="@drawable/roundedcorners"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:text=""
        android:textSize="40sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="true"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="54dp" />

    <TextView
        android:id="@+id/city2"
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:gravity="center"
        android:background="@drawable/roundedcorners"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:text=""
        android:textSize="40sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="true"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="462dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IS"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="26dp"
        tools:layout_editor_absoluteX="190"
        tools:layout_editor_absoluteY="240dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="26dp"
        android:text="THAN"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="427dp" />

    <Button
        android:id="@+id/colder_button"
        android:layout_width="181dp"
        android:layout_height="153dp"
        android:backgroundTint="@color/blue"
        android:text="Colder"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="271dp" />

    <Button
        android:id="@+id/hotter_button"
        android:layout_width="181dp"
        android:layout_height="153dp"
        android:backgroundTint="@color/red"
        android:text="Hotter"
        tools:layout_editor_absoluteX="214dp"
        tools:layout_editor_absoluteY="271dp" />

    <RelativeLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/lightBlue"
        >

        <!-- Define the home button -->
        <Button
            android:id="@+id/home_button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:contextClickable="true"
            android:text="@string/app_name"
            />

        <!-- Define the saved locations button -->
        <Button
            android:id="@+id/locations_button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@+id/home_button"
            android:text="@string/locations_button_text"/>

        <!-- Define the settings button -->
        <Button
            android:id="@+id/game_button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/locations_button"
            android:text="Game"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>